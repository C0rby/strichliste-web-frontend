{
  "name": "strichliste-web",
  "version": "0.4.0",
  "private": true,
  "dependencies": {
    "bricks-of-sand": "^0.0.19",
    "downshift": "^3.1.0",
    "emotion": "^9.2.5",
    "history": "^4.7.2",
    "howler": "^2.0.15",
    "lodash": "^4.17.10",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-emotion": "^9.2.5",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "@types/fetch-mock": "^6.0.3",
    "@types/howler": "^2.0.5",
    "@types/jest": "23.3.9",
    "@types/lodash": "^4.14.116",
    "@types/node": "10.12.2",
    "@types/react": "16.4.18",
    "@types/react-dom": "16.0.9",
    "@types/react-intl": "^2.3.9",
    "@types/react-redux": "^6.0.6",
    "@types/react-router": "^4.0.30",
    "@types/react-router-dom": "^4.2.4",
    "@types/redux-mock-store": "^1.0.0",
    "awesome-typescript-loader": "^5.2.0",
    "babel-core": "^6.26.3",
    "babel-preset-jest": "^23.2.0",
    "husky": "^1.1.2",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.2",
    "react-testing-library": "^5.0.0",
    "redux-mock-store": "^1.5.3",
    "storybook-addon-jsx": "^5.4.0",
    "ts-config": "^20.4.0",
    "ts-jest": "~23.10.4",
    "tslint": "^5.11.0",
    "typescript": "3.1.6"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": {
    "trailingComma": "es5",
    "proseWrap": "never",
    "singleQuote": true
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "git add"
      ],
      "*.md": [
        "prettier --prose-wrap always --write",
        "git add"
      ],
      "*.{ts,tsx}": [
        "prettier --write",
        "git add",
        "tslint --project tsconfig.json --config tslint.json"
      ],
      "*.css": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint"
    }
  }
}
