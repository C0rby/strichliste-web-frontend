    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.1.2",
    "lint-staged": "^8.0.4",
    "prettier": "^1.16.4",
    "react-testing-library": "^5.8.0",
    "redux-mock-store": "^1.5.3",
    "ts-config": "^20.4.0",
    "ts-jest": "~23.10.4",
    "typescript": "3.3.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": {
    "trailingComma": "es5",
    "proseWrap": "never",
    "singleQuote": true
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "git add"
      ],
      "*.md": [
        "prettier --prose-wrap always --write",
        "git add"
      ],
      "*.{ts,tsx}": [
        "prettier --write",
        "yarn lint --fix",
        "git add"
      ],
      "*.css": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint"
    }
  }
}
