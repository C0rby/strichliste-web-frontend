{
  "name": "strichliste-web",
  "version": "1.5.1",
  "private": true,
  "dependencies": {
    "bricks-of-sand": "^0.1.11",
    "downshift": "^3.2.2",
    "history": "^4.7.2",
    "howler": "^2.1.1",
    "inter-ui": "^3.2.0",
    "lodash": "^4.17.10",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-intl": "^2.8.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.3",
